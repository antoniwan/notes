---
interface Props {
  tag: string;
  count: number;
  size?: 'sm' | 'md' | 'lg';
  variant?: 'default' | 'subtle' | 'bordered';
  showCount?: boolean;
  className?: string;
}

const {
  tag,
  count,
  size = 'md',
  variant = 'default',
  showCount = true,
  className = '',
} = Astro.props;

// Simplified color system
const getTagColor = (variant: string) => {
  const colors = {
    default:
      'bg-[rgb(var(--color-accent))]/10 border-[rgb(var(--color-accent))]/20 text-[rgb(var(--color-accent))] hover:bg-[rgb(var(--color-accent))]/20',
    subtle:
      'bg-[rgb(var(--color-bg-alt))] border-[rgb(var(--color-border))] text-[rgb(var(--color-text-muted))] hover:bg-[rgb(var(--color-bg-alt))]/80',
    bordered:
      'bg-transparent border-[rgb(var(--color-accent))]/30 text-[rgb(var(--color-accent))] hover:bg-[rgb(var(--color-accent))]/10',
  };

  return colors[variant as keyof typeof colors];
};

// Size classes
const sizeClasses = {
  sm: 'text-sm px-2.5 py-1',
  md: 'text-base px-3 py-1.5',
  lg: 'text-lg px-4 py-2',
};
---

<a
  href={`/tag/${tag}/`}
  class={`tag-card group inline-flex items-center gap-2 ${sizeClasses[size]} rounded-full border font-medium interactive-button focus:outline-none focus:ring-2 focus:ring-[rgb(var(--color-accent))] focus:ring-offset-1 ${getTagColor(variant)} ${className}`}
>
  <span class="tag-icon" aria-hidden="true">üè∑Ô∏è</span>
  <span class="tag-text">#{tag}</span>
  {
    showCount && (
      <span class="tag-count text-sm font-normal leading-relaxed opacity-75">{count}</span>
    )
  }
</a>

<style>
  /* Enhanced tag card styling */
  .tag-card {
    transition: all 0.2s ease;
    backdrop-filter: blur(4px);
  }

  /* Tag icon styling */
  .tag-icon {
    font-size: 0.875em;
    opacity: 0.8;
  }

  /* Tag text styling */
  .tag-text {
    font-weight: 500;
    letter-spacing: -0.01em;
  }

  /* Tag count styling */
  .tag-count {
    font-weight: 400;
    opacity: 0.75;
  }

  /* Enhanced hover effects */
  .tag-card:hover {
    transform: translateY(-1px);
    box-shadow:
      0 4px 6px -1px rgb(0 0 0 / 0.1),
      0 2px 4px -1px rgb(0 0 0 / 0.06);
  }

  /* Focus styles for accessibility */
  .tag-card:focus {
    outline: 2px solid rgb(var(--color-accent));
    outline-offset: 2px;
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .tag-card {
      transition: none !important;
    }

    .tag-card:hover {
      transform: none;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .tag-card {
      font-size: 0.75rem;
      padding: 0.125rem 0.375rem;
    }
  }
</style>
